@model MvcProjct_App.Models.UserInsert
@{
    ViewBag.Title = "User Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="bg-info text-uppercase p-3">User Registration</h2>
<hr />
<div class="container">
    <div class="form-horizontal">
        @using (Html.BeginForm("Insert_click", "UserReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label class="control-label col-md-2">Name:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.u_name, new { @class = "form-control", placeholder = "Enter your name" })
                    @Html.ValidationMessageFor(m => m.u_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Age:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.u_age, new { @class = "form-control", placeholder = "Enter your age" })
                    @Html.ValidationMessageFor(m => m.u_age, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Address:</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.u_address, new { @class = "form-control", placeholder = "Enter your address", rows = 3 })
                    @Html.ValidationMessageFor(m => m.u_address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Phone:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.u_phone, new { @class = "form-control", placeholder = "Enter your phone number" })
                    @Html.ValidationMessageFor(m => m.u_phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Email:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.u_email, new { @class = "form-control", placeholder = "Enter your email address" })
                    @Html.ValidationMessageFor(m => m.u_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Qualification:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.qualification, new { @class = "form-control", placeholder = "Enter your qualification" })
                    @Html.ValidationMessageFor(m => m.qualification, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Experience:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.experience, new { @class = "form-control", placeholder = "Enter your experience" })
                    @Html.ValidationMessageFor(m => m.experience, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Skills:</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.skills, new { @class = "form-control", placeholder = "Enter your skills", rows = 3 })
                    @Html.ValidationMessageFor(m => m.skills, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Photo:</label>
                <div class="col-md-10">
                    <input type="file" name="file" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Resume:</label>
                <div class="col-md-10">
                    <input type="file" name="file2" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Username:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.username, new { @class = "form-control", placeholder = "Enter your username" })
                    @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Password:</label>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.pass, new { @class = "form-control", placeholder = "Enter your password" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Confirm Password:</label>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.cpassword, new { @class = "form-control", placeholder = "Confirm your password" })
                    @Html.ValidationMessageFor(m => m.cpassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Insert" class="btn btn-primary" />
                    @Html.DisplayFor(m => m.usermsg, "", new { @class = "text-success" })
                    @Html.ActionLink("Back to Home", "Login_pageload", "UserLogin", null, new { @class = "btn btn-default" })
                    @*@Html.ActionLink("User signup", "Login_pageload", "UserLogin", null, new { @class = "btn btn-secondary mr-2" })*@
                </div>
                
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


