@model MvcProjct_App.Models.JobInsert
@{
    ViewBag.Title = "jobPageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="bg-info text-uppercase p-3">Job Register</h2>
<hr />
<div class="container">
    <div class="form-horizontal">
        @using (Html.BeginForm("job_click", "jbInsert", FormMethod.Post))
        {
            <div class="form-group">
                <label class="control-label col-md-2">JobTitle:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter Job Title"})
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Experience:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Experience, new { @class = "form-control", placeholder = "Enter your experience" })
                    @Html.ValidationMessageFor(m => m.Experience, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Skills:</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Skill, new { @class = "form-control", placeholder = "Enter your skills", rows = 3 })
                    @Html.ValidationMessageFor(m => m.Skill, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">No of Vaccancy:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.No_vaccancy, new { @class = "form-control", placeholder = "Enter vaccancies" })
                    @Html.ValidationMessageFor(m => m.No_vaccancy, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Date:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "Enter date", type = "date" })
                    @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })

                </div>
            </div>

            

            

            

            

           

           

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Insert" class="btn btn-primary" />
                    @Html.DisplayFor(m => m.msg, "", new { @class = "text-success" })
                    @Html.ActionLink("Back to Home", "Login_pageload", "UserLogin", null, new { @class = "btn btn-default" })
                   
                </div>

            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


