@model IEnumerable<MvcProjct_App.sp_selectAllAppliedJob_Result>

@{
    ViewBag.Title = "DisplayAll_Applied_job_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5 bg-light">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="card-header bg-gradient-primary text-white p-4">
                    <h2 class="mb-0 text-center font-weight-bold">
                        <i class="fas fa-briefcase mr-2"></i>Applied Jobs
                    </h2>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table id="jobTable" class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Job Title</th>
                                    <th>Experience</th>
                                    <th>Skills</th>
                                    <th>Resume</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="job-row">
                                        <td class="font-weight-bold text-primary">@item.@*Title</td>
                                        <td class="font-weight-bold text-primary">@item.Experience</td>
                                        <td class="font-weight-bold text-primary">@item.Skill</td>*@
                                        <td class="font-weight-bold text-primary">
                                            <a href="@Url.Content(item.Resume)" target="_blank">View Resume</a>
                                        </td>
                                        <td>@item.Status</td>
                                        <td>@*<i class="far fa-calendar-alt mr-1"></i>@item.Appication_date.ToString("dd MMM yyyy")*@</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #4e73df, #36b9cc);
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 1.2rem;
        letter-spacing: 0.5px;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.8em;
        padding: 0.4em 0.7em;
    }

    .job-row:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0,0,0,.1);
        transition: all 0.3s ease;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#jobTable').DataTable({
                "pageLength": 10,
                "order": [[4, "desc"]]
            });
        });
    </script>
}
