@model MvcProjct_App.Models.JobUpdate
@{
    ViewBag.Title = "delete_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>delete_pageload</h2>

@using (Html.BeginForm("Delete", "JbUpdate", FormMethod.Post))
{
    @Html.HiddenFor(model => model.jb_id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Experience)
        @Html.TextBoxFor(model => model.Experience, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Skill)
        @Html.TextBoxFor(model => model.Skill, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.No_vaccancy)
        @Html.TextBoxFor(model => model.No_vaccancy, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date)
        @Html.TextBoxFor(model => model.Date, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status)
        @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
    </div>


    <input type="submit" value="delete" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this job?')" />
    @Html.DisplayFor(model => model.msg, "", new { @class = "text-success" })
    @Html.ActionLink("View job", "DisplayAlljob_pageload", "SelectAlljob", null, new { @class = "btn btn-default" })

}

@if (!string.IsNullOrEmpty(Model.msg))
{
    <div class="alert alert-success">
        @Model.msg
    </div>
}
