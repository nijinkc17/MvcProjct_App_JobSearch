@model MvcProjct_App.Models.AdminInsert
@{
    ViewBag.Title = "Insertadmin_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="bg-info text-uppercase p-3">Admin Signup</h2>
<hr />
<div class="container">
    <div class="form-horizontal">
        @using (Html.BeginForm("Insertadmin_click", "AdminReg", FormMethod.Post))
        {
            <div class="form-group">
                <label class="control-label col-md-2">Name:</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.c_name, new { @class = "form-control", placeholder = "Enter your name" })
                    </div>
                    @Html.ValidationMessageFor(m => m.c_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Address:</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.c_address, new { @class = "form-control", placeholder = "Enter your address", rows = "3" })
                    @Html.ValidationMessageFor(m => m.c_address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Phone:</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                        @Html.TextBoxFor(m => m.c_phone, new { @class = "form-control", placeholder = "Enter your phone number" })
                    </div>
                    @Html.ValidationMessageFor(m => m.c_phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Email:</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        @Html.TextBoxFor(m => m.c_email, new { @class = "form-control", placeholder = "Enter your email address" })
                    </div>
                    @Html.ValidationMessageFor(m => m.c_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Location:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.c_location, new { @class = "form-control", placeholder = "Enter your location" })
                    @Html.ValidationMessageFor(m => m.c_location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Username:</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.username, new { @class = "form-control", placeholder = "Enter your username" })
                    </div>
                    @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Password:</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.pass, new { @class = "form-control", placeholder = "Enter your password" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Confirm Password:</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.cpassword, new { @class = "form-control", placeholder = "Confirm your password" })
                    </div>
                    @Html.ValidationMessageFor(m => m.cpassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Insert" class="btn btn-primary" />
                    @Html.DisplayFor(m => m.adminmsg, "", new { @class = "text-success" })
                    @Html.ActionLink("Back to Home", "Login_pageload", "UserLogin", null, new { @class = "btn btn-default" })
                    @*@Html.ActionLink("User signup", "Login_pageload", "UserLogin", null, new { @class = "btn btn-secondary mr-2" })*@
                </div>
            </div>
        }
    </div>

    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



